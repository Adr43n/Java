        // afficher noms des étudiants nés en 2003
        System.out.println("\nNOMS DES ETUDIANTS NES EN 2003");
        // ...
        etudiants.stream()
            .filter(r -> r.getAnneeNaissance() == 2003)
            .map(e -> e.getNom())
            .forEach(r -> System.out.println(r));
        
            
        // afficher par ordre alphabétique les noms des étudiants nés après 2003
        System.out.println(
            "\nNOMS PAR ORDRE ALPHABETIQUE DES ETUDIANTS NES APRES 2003");
        etudiants.stream()
            .filter(r -> r.getAnneeNaissance() > 2003)
            .map(e -> e.getNom())
            .sorted()
            .forEach(r -> System.out.println(r));

        // afficher les années de naissance classées des étudiants sans doublon
        System.out.println("\nANNEES DE NAISSANCE DES ETUDIANTS SANS DOUBLON");
        // ...

        // afficher les étudiants classés par groupe puis nom puis prénom
        System.out
            .println("\nETUDIANTS CLASSES PAR GROUPE PUIS NOM PUIS PRENOM");
        // ...

        // afficher les noms prénoms des étudiants du groupe B triés sur le
        // nom
        System.out
            .println("\nNOM-PRENOM DES ETUDIANTS DU GROUPE B TRIES SUR LE NOM");
        // ...

        // construire puis éditer la liste des étudiants (nom+prénom) par ordre
        // alphabétique
        System.out.println("\nLISTE ClASSEE NOM-PRENOM DES ETUDIANTS");
        // ...

        // construire puis éditer la map (clé=groupe,liste nom+" - "prénom
        // des étudiants de ce groupe triée par ordre
        // alphabétique)
        System.out.println("\nMAP DES ETUDIANTS PAR GROUPE");
        // ...

